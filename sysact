#!/bin/sh

# A dmenu wrapper script for system functions.
export WM="dwm"
case "$(readlink -f /sbin/init)" in
        *systemd*) ctl='systemctl' ;;
        *) ctl='loginctl' ;;
esac

wmpid(){ # This function is needed if there are multiple instances of the window manager.
        tree="$(pstree -ps $$)"
        tree="${tree#*$WM(}"
        echo "${tree%%)*}"
}

case "$(printf "ðŸšª leave $WM\nðŸ“º renew $WM\nðŸ”ƒ reboot\nðŸ”’ shutdown" | dmenu -i -p 'Action: ')" in
        "ðŸšª leave $WM") kill -TERM "$(wmpid)" ;;
        "ðŸ“ºrenew $WM") kill -HUP "$(wmpid)" ;;
        'ðŸ”ƒ reboot') $ctl reboot -i ;;
        'ðŸ”’ shutdown') $ctl poweroff -i ;;
        *) exit 1 ;;
esac
